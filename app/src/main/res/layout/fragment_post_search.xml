<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192042"
    tools:context=".Ui.Fragment.PostSearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/txt"
        android:layout_width="317dp"
        android:layout_height="43dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toStartOf="@+id/btn"
        android:layout_toLeftOf="@+id/btn"
        android:background="#fff"
        android:hint="(ID)" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="00dp"
        android:text="Search" />

    <TextView
        android:id="@+id/search_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:text="" />
    <TextView
        android:id="@+id/search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#d6e17a"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text=""
        android:layout_below="@id/search_item_id"/>
    <TextView
        android:id="@+id/search_item_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:textSize="20dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_below="@id/search_item_title"

        />


</RelativeLayout>